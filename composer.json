{
    "name": "stfalcon/fwdays",
    "type": "project",
    "license": "proprietary",
    "description": "Site for conference Frameworks Days",
    "homepage": "http://fwdays.com/",
    "autoload": {
        "psr-4": {
            "Application\\Bundle\\DefaultBundle\\": "src/Application/Bundle/DefaultBundle"
        },
        "classmap": [ "app/AppKernel.php", "app/AppCache.php" ]
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": "tests/" },
        "files": [ "vendor/symfony/symfony/src/Symfony/Component/VarDumper/Resources/functions/dump.php" ]
    },
    "require": {
        "php": ">=7.1",
        "ext-imagick": "*",
        "ext-redis": "*",
        "symfony/symfony": "3.0.*",
        "symfony/assetic-bundle": "2.8.*",
        "symfony/swiftmailer-bundle": "2.3.*",
        "symfony/monolog-bundle": "2.11.*",
        "doctrine/orm": "*",
        "doctrine/doctrine-bundle": "*",
        "doctrine/doctrine-fixtures-bundle": "*",
        "doctrine/doctrine-migrations-bundle": "1.0.*",
        "twig/extensions": "1.3.*",
        "twig/twig": "<2.0",
        "sensio/framework-extra-bundle": "3.0.*",
        "sensio/generator-bundle": "*",
        "sensio/buzz-bundle": "1.1.*",
        "sonata-project/admin-bundle": "3.23.*",
        "sonata-project/intl-bundle": "2.3.*",
        "sonata-project/block-bundle": "3.4.*",
        "sonata-project/core-bundle": "3.5.*",
        "sonata-project/doctrine-orm-admin-bundle": "3.1.7",
        "jms/security-extra-bundle": "1.6.*",
        "friendsofsymfony/user-bundle": "*",
        "stof/doctrine-extensions-bundle": "1.2.*",
        "mlehner/gelf-php": "1.1.*",
        "endroid/qrcode": "1.6.*",
        "vich/uploader-bundle": "*",
        "a2lix/translation-form-bundle": "*",

        "accord/mandrill-swiftmailer-bundle": "^1.2",
        "ibrows/sonata-translation-bundle": "^1.1",
        "jms/i18n-routing-bundle": "^2.0",
        "gedmo/doctrine-extensions": "^2.4",
        "friendsofsymfony/jsrouting-bundle": "^1.6",
        "hwi/oauth-bundle": "^0.5.3",
        "suncat/mobile-detect-bundle": "*",
        "liip/imagine-bundle": "^1.9.1",
        "sentry/sentry-symfony": "^1.0.3",
        "maxmind/geoip": "^1.1.5",
        "mpdf/mpdf": "^8.0",
        "oneup/flysystem-bundle": "^2.0.1",
        "aws/aws-sdk-php": "^3.92.5",
        "league/flysystem-aws-s3-v3": "^1.0.22",
        "snc/redis-bundle": "^2.1.9",
        "predis/predis": "^1.1.1",
        "cmen/google-charts-bundle": "^3.1.0",
        "beberlei/doctrineextensions": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8",
        "liip/functional-test-bundle": "*",
        "behat/behat": "*",
        "behat/mink": "*",
        "behat/mink-selenium2-driver": "*",
        "behat/symfony2-extension": "*",
        "behat/mink-extension": "*",
        "behat/common-contexts": "*",
        "behat/mink-browserkit-driver": "*",
        "polishsymfonycommunity/symfony2-mocker-extension": "1.0.*",
        "phpspec/prophecy": "1.6.*",
        "escapestudios/symfony2-coding-standard": "^3.4",
        "friendsofphp/php-cs-fixer": "^2.2",
        "squizlabs/php_codesniffer": "^3.3",
        "phpmd/phpmd": "^2.6"
    },
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "platform": {
            "php": "7.1"
        }
    },
    "scripts": {
        "scripts": {
            "symfony-scripts": [
                "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
                "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
                "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
                "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
                "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
            ],
            "post-install-cmd": [
                "@symfony-scripts"
            ],
            "post-update-cmd": [
                "@symfony-scripts"
            ]
        },
        "ci:composer-validate": "composer validate --no-check-all",
        "ci:security-check": "app/console security:check",
        "ci:doctrine-schema-validate": [
            "app/console doctrine:database:create --if-not-exists",
            "app/console doctrine:migrations:migrate --no-interaction --allow-no-migration",
            "app/console doctrine:schema:validate"
        ],
        "ci:twig-lint": "app/console lint:twig src/Application/Bundle/DefaultBundle/Resources/views/",
        "ci:yaml-lint": "app/console lint:yaml app/config/",
        "ci:code-style": [
            "bin/phpcs ./src -p --encoding=utf-8 --extensions=php --ignore=Tests,Features -n --standard=./vendor/escapestudios/symfony2-coding-standard/Symfony",
            "bin/php-cs-fixer fix -q --dry-run --rules=@Symfony ./src"
        ],
        "ci:phpunit": [
            "app/console doctrine:database:drop --env=test --force --if-exists",
            "app/console do:da:cr --env=test",
            "app/console do:mi:mi --env=test --no-interaction",
            "app/console do:fi:lo --env=test --no-interaction",
            "bin/phpunit -c app/phpunit.xml.dist",
            "app/console do:da:dr --force --env=test"
        ],
        "ci:static-analysis": [
            "bin/phpstan analyse -l 6 --no-progress  -c phpstan.neon src/"
        ],
        "ci:phpunit-with-coverage": [
            "app/console doctrine:database:drop --env=test --force --if-exists",
            "app/console do:da:cr --env=test",
            "app/console do:mi:mi --env=test --no-interaction",
            "app/console do:fi:lo --env=test --no-interaction",
            "bin/phpunit -c app/phpunit.xml.dist --coverage-text --colors=never --coverage-xml=./phpunit-coverage.xml --coverage-clover=clover-coverage.xml --log-junit=./junit.xml",
            "app/console do:da:dr --force --env=test"
        ],
        "app:recreate-database": [
            "app/console doctrine:database:drop --force --if-exists",
            "app/console doctrine:database:create --if-exists",
            "app/console doctrine:migrations:migrate --no-interaction --allow-no-migration",
            "app/console doctrine:schema:validate",
            "app/console doctrine:fixtures:load --no-interaction"
        ],
        "ci:pack": [
            "@ci:composer-validate",
            "@ci:security-check",
            "@ci:doctrine-schema-validate",
            "@ci:twig-lint",
            "@ci:yaml-lint",
            "@ci:code-style",
            "@ci:phpunit"
        ]
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "symlink",
        "symfony": {
            "allow-contrib": true
        }
    }
}

