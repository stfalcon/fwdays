<section class="video">
    <div class="container">
        <div class="video__box event_video">
            <iframe width="100%" height="350" id="vimeo-video" class="lazyload"
                {% if is_playlist %}
                    data-src="https://vimeo.com/showcase/{{ event_block.text }}/embed"
                {% else %}
                    data-src="https://player.vimeo.com/video/{{ event_block.text }}"
                {% endif %}
                frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen>
            </iframe>
        </div>
    </div>
</section>
