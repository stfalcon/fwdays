<section class="video">
    <div class="container">
        <div class="video__box">
            <div class="video__frame">
                <iframe width="560" height="315" id="vimeo-video"
                        {% if is_playlist %}
                            data-src="https://vimeo.com/showcase/{{ event_block.text }}/embed"
                        {% else %}
                            data-src="https://player.vimeo.com/video/{{ event_block.text }}"
                        {% endif %}
                        frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen>
                </iframe>
            </div>
            {% if is_playlist == false -%}
                <div class="video__description">
                    <iframe width="560" height="315"
                            data-src="https://vimeo.com/live-chat/{{ event_block.text }}/"
                            frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                    </iframe>
                </div>
            {%- endif -%}
        </div>
    </div>
</section>
