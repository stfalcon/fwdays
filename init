#!/bin/bash

cd /app
cp app/config/parameters.yml.docker app/config/parameters.yml
mysql -u root -pqwerty -h mysql -e "CREATE DATABASE IF NOT EXISTS fwdays_com_development"
composer.phar install
php app/console do:mi:mi --no-interaction
php app/console do:fi:lo --no-interaction
php app/console assets:install web --symlink
php app/console assetic:dump
php app/console lexik:translations:import
unxz geodata/GeoLiteCity.dat.xz
npm install
npm run gulp-dev
