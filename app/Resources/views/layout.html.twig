<!doctype html>
<html lang="{{ app.request.locale }}">
<head>
    <title>{% block title %}Fwdays. IT tech conferences in Ukraine, Kyiv{% endblock title %}</title>
    {% block metatags %}
    {% if app.environment != 'prod' -%}
        <meta name="robots" content="none"/>
    {% endif -%}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=1">
    <meta property="og:image" content="{{ absolute_url(asset('assets/img/gallery/og_image/gallery_image_9.jpg')) }}" />
    <meta property="og:image" content="{{ absolute_url(asset('assets/img/gallery/og_image/gallery_image_4.jpg')) }}" />
    <meta property="og:image" content="{{ absolute_url(asset('assets/img/gallery/og_image/gallery_image_6.jpg')) }}" />
    <meta property="og:image" content="{{ absolute_url(asset('assets/img/gallery/og_image/gallery_image_8.jpg')) }}" />
    {% endblock metatags %}
    {% block meta_description %}
    <meta name="description" content="Frameworks Days - large-scale tech conferences, meetups and workshops for developers on JavaScript, Frontend, PHP, .NET, Highload, PM in Ukraine">
    {% endblock meta_description %}

    <link rel="icon" type="image/x-icon" href="{{ asset('img/favicon.ico') }}">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('assets/styles/main.css'|app_asset_version) }}">
</head>

{% block body_class %}
<body>
{% endblock %}
{%- if app.environment == 'prod' -%}
    <!-- Google Tag Manager -->
    <noscript><iframe src="//www.googletagmanager.com/ns.html?id=GTM-PHVHRX"
                      height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager -->
{% endif %}
<!--BEGIN layout-box-->
<div class="layout-box">
    <!--BEGIN layout-box__top-->
    <div class="layout-box__top">
        {% include '@ApplicationDefault/Redesign/header.html.twig' %}
        <section class="payment">
            <div class="container payment__container">
                <div class="payment__left">
                    <h2 class="h2 payment__title">Оплата участі в конференції PHP fwdays'19</h2>
                    <div class="payment__list">
                        <div class="payer">
                            <div class="payer__number">1</div>
                            <div class="user-payment">
                                <div class="user-payment__left">
                                    <div class="user-payment__name">Марина Вамуш </div>
                                    <div class="user-payment__email">marinavamush@gmail.com</div>
                                </div>
                                <div class="user-payment__right">
                                    <div class="user-payment__price">2 480 грн</div>
                                </div>
                                <div class="user-payment__controls">
                                    <button type="button" class="user-payment__btn">
                                        <i class="icon-edit"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="payer">
                            <div class="payer__number">2</div>
                            <div class="user-payment">
                                <div class="user-payment__left">
                                    <div class="user-payment__name">Марина Вамуш </div>
                                    <div class="user-payment__email">marinavamush@gmail.com</div>
                                </div>
                                <div class="user-payment__right">
                                    <div class="user-payment__price">
                                        <span class="user-payment__price-strike">3 100 грн </span>2 480 грн
                                    </div>
                                    <div class="user-payment__discount">
                                        −50% для студентів денної форми навчання
                                    </div>
                                </div>
                                <div class="user-payment__controls">
                                    <button type="button" class="user-payment__btn">
                                        <i class="icon-edit"></i>
                                    </button>
                                    <button type="button" class="user-payment__btn">
                                        <i class="icon-closed"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="payer">
                            <div class="payer__number">2</div>
                            <div class="user-payment-form">
                                <div class="form-row">
                                    <div class="form-col form-col--12">
                                        <div class="form-group form-group--flex">
                                            <label class="form-label">Ім’я</label>
                                            <input class="input" type="text" value="">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-col form-col--12">
                                        <div class="form-group form-group--flex">
                                            <label class="form-label">прізвище</label>
                                            <input class="input" type="text" value="">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-col form-col--12">
                                        <div class="form-group form-group--flex">
                                            <label class="form-label">e-mail</label>
                                            <input class="input" type="email" value="">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-col form-col--12">
                                        <div class="form-group form-group--flex">
                                            <label class="form-label">промокод</label>
                                            <input class="input" type="number" value="">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-col form-col--12">
                                        <button type="button" class="btn btn--md btn--secondary">зберегти</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn-icon">
                        <i class="icon-add btn-icon__img"></i>
                        <span class="btn-icon__text"> Додати ще одного учасника</span>
                    </button>
                </div>
                <div class="payment__right">
                    <div class="payment-cart">
                        <div class="payment-cart__top">
                            <div class="payment-cart__text">До оплати:</div>
                            <div class="payment-cart__total">
                                <div class="payment-cart__text payment-cart__text--strike">6 400 грн</div>
                                <div class="payment-cart__text">4 400 грн</div>
                                <div class="payment-cart__hint">
                                    − 1 300 грн бонуси Fwdays
                                    <i class="icon-close icon-close--sm"></i>
                                </div>
                            </div>
                        </div>
                        <label class="form-label">ваші бонуси fwdays</label>
                        <div class="tooltip">
                            <i class="icon-tooltip tooltip__icon"></i>
                            <div class="tooltip__content">
                                У вартість квитка входить: відвідування всіх потоків доповідей, пакет учасника, обід, відвідування афтепаті, знижка 20% на всі майбутні конференції від Fwdays.
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-col form-col--5">
                                <div class="form-group">
                                    <input class="input input--xs" type="text" value="">
                                </div>
                            </div>
                            <div class="form-col form-col--7">
                                <button type="button" class="btn btn--xs btn--secondary form-col__btn">застосувати</button>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-col form-col--12">
                                <div class="form-group">
                                    <label class="form-label">телефон, не обов’язково</label>
                                    <input class="input input--xs" type="text" value="">
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-col form-col--12">
                                <button type="button" class="btn btn--lg btn--primary form-col__btn">оплатити</button>
                            </div>
                        </div>
                        <div class="form-row form-row--checkbox">
                            <div class="form-col">
                                <div class="checkbox checkbox--offer-contract">
                                    <input id="agree-check-payment" type="checkbox" name="_remember_me" class="checkbox__input" required
                                           data-msg="{{ 'check_box.agree_with_conditions_error' |trans }}">
                                    <label for="agree-check-payment" class="checkbox__label">{{ 'check_box.agree_with_conditions_1' |trans }}
                                        <a href="{{ path('page', {'slug' : 'public-offer'}) }}" target="_blank" class="btn-link">{{ 'check_box.agree_with_conditions_2' |trans }}</a>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        {% block content %}{% endblock content %}
    </div>
    <!--END layout-box__top-->

    <!--BEGIN layout-box__bottom-->
    <div class="layout-box__bottom">
        {% include '@ApplicationDefault/Redesign/footer.html.twig' %}
    </div>
    <!--END layout-box__bottom-->
    {% if not is_mobile() and not app.user %}
        {% include '@ApplicationDefault/Redesign/signin_popups.html.twig' %}
    {% endif %}

    {% block payment_popup %}
        {% if not is_mobile() and app.user %}
            {% include '@ApplicationDefault/Redesign/Payment/_payment.popup.html.twig' %}
        {% endif %}
    {% endblock %}
</div>

<!--END layout-box-->
{% block popups %}
    <!--BEGIN alert-->
    <div id="flash-user" class="alert alert--success">
        <div class="alert__container">
            <div id="flash-user-content" class="alert__content"></div>
            <button class="alert__close icon-close icon-close--dark"></button>
        </div>
    </div>
    <!--END alert-->
{% endblock popups %}

{% block facebook %}
    {% include '@ApplicationDefault/Redesign/_fb_init.html.twig' %}
{% endblock %}

{% set lang = app.request.locale == 'uk' ? 'uk_UA' : 'en_US' %}

{% block scripts %}
    {%- if app.environment == 'prod' -%}
    <!-- Google Tag Manager -->
        <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
                    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
                j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
                '//www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
            })(window,document,'script','dataLayer','GTM-PHVHRX');
        </script>
    <!-- End Google Tag Manager -->
    {% endif %}
    <script>
        var locale = "{{ app.request.locale }}";
        var homePath = "{{ path('homepage') }}";
    </script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}" defer></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}" defer></script>
    <script id="widget-wfp-script" language="javascript" type="text/javascript"
            src="https://secure.wayforpay.com/server/pay-widget.js" async defer></script>
    {% if app.environment in ['prod', 'stag'] -%}
        <script>
            var sentry_dsn_js_public = '{{ sentry_dsn_js_public }}';
        </script>
        <script src="{{ asset('js/raven.min.js')}}" defer crossorigin="anonymous"></script>
    {% endif -%}
    {% set main_script = 'assets/js/'~ app.request.locale ~'/main.js' %}
    <script src="{{ asset(main_script|app_asset_version) }}" defer></script>

    {% if app.request.cookies.has('event') -%}
        <script src="{{ asset('js/payment-after-login.js') }}" defer></script>
    {%- endif %}

    {% for message in app.session.flashBag.get('fos_user_success') %}
        <script>
            var flashText = '{{ message|trans }}';
        </script>
        <script src="{{ asset('js/flash-text.js') }}" defer></script>
    {% endfor %}
    <div id="fb-root"></div>
    <script>
        var lang = '{{ lang }}';
    </script>
    <script src="{{ asset('js/facebook-sdk.js') }}" async defer></script>
{% endblock scripts %}
</body>
</html>
