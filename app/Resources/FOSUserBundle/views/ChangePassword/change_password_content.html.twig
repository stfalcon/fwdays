<form action="{{ path('fos_user_change_password') }}" method="POST" class="fos_user_change_password">
    <div class="form-row">
        <div class="form-col form-col--6 form-col--xs-12">
            <label class="form-label form-label--required" for="fos_user_change_password_form_current_password">{{ 'form.current_password'|trans({}, 'FOSUserBundle') }}</label>
            <input class="input {% if form is defined and form.current_password.vars.errors|length %}input--error{% endif %}" type="password" id="fos_user_change_password_form_current_password" name="fos_user_change_password_form[current_password]" required="required">
            {% if form is defined and form.current_password.vars.errors|length %}<p class="text-error">{{ form.current_password.vars.errors[0].message|trans }}</p>{% endif %}
        </div>
    </div>
    <div class="form-row">
        <div class="form-col form-col--6 form-col--xs-12">
            <label class="form-label form-label--required" for="fos_user_change_password_form_new_first">{{ 'form.new_password'|trans({}, 'FOSUserBundle') }}</label>
            <input class="input {% if form is defined and form.plainPassword.first.vars.errors|length %}input--error{% endif %}" type="password" id="fos_user_change_password_form_plainPassword_first" name="fos_user_change_password_form[plainPassword][first]" required="required">
            {% if form is defined and form.plainPassword.first.vars.errors|length %}<p class="text-error">{{ form.plainPassword.first.vars.errors[0].message|trans }}</p>{% endif %}
        </div>
    </div>
    <div class="form-row">
        <div class="form-col form-col--6 form-col--xs-12">
            <label class="form-label form-label--required" for="fos_user_change_password_form_new_second">{{ 'form.new_password_confirmation'|trans({}, 'FOSUserBundle') }}</label>
            <input class="input {% if form is defined and form.plainPassword.second.vars.errors|length %}input--error{% endif %}" type="password" id="fos_user_change_password_form_plainPassword_second" name="fos_user_change_password_form[plainPassword][second]" required="required">
            {% if form is defined and form.plainPassword.second.vars.errors|length %}<p class="text-error">{{ form.plainPassword.second.vars.errors[0].message|trans }}</p>{% endif %}
        </div>
    </div>
    {{ form_widget(form._token) }}
    <div class="form-row form-row--align-center">
        <div class="form-col form-col--6 form-col--xs-12">
            <button class="btn btn--primary btn--lg form-col__btn"
                    type="submit">{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}</button>
        </div>
    </div>
    <div class="form-row form-row--align-center">
        <div class="form-col form-col--6 form-col--xs-12">
            <div class="help-links__item">
                <a href="{{ path('fos_user_resetting_check_email') }}" class="form-link">{{ 'user.forgot_password.title'|trans }}</a>
            </div>
        </div>
    </div>
</form>
