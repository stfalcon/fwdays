{% if sponsors %}
    <h2>Спонсоры</h2>

    {% for sponsor in sponsors %}
        <div class="partner sort-order-{{ loop.index }}">
            <a href="{{ sponsor.site }}">
                <img src="{{ vich_uploader_asset(sponsor, 'file') }}" alt="{{ sponsor.name }}" title="{{ sponsor.name }}" />
            </a>
        </div>
    {% endfor %}
{% endif %}

<div class="become-partner">
    <a href="{{ path('page_show', {'slug': 'partners'}) }}#become-partner">
        Здесь может<br> быть ваш логотип
    </a>
</div>