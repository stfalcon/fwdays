{% extends '::layout.html.twig' %}
{% block title %}{{ 'sponsor.partners.title'|trans }} / {{ parent() }}{% endblock %}
{% block content %}
    {% if sponsors %}
            <h2>
                {{ 'sponsor.partners.title'|trans }}
            </h2>
            <table class="sponsors-partners-list">
                <tbody>
                {% for sponsor in sponsors %}
                    <tr>
                        <td class="sp-logo">
                            {% include 'StfalconSponsorBundle:Sponsor:_sponsor.html.twig' %}
                        </td>
                        <td class="sp-info">
                            <div class="sp-info-h">{{ sponsor.name }}</div>
                            <p>{{ sponsor.about }}</p>
                        </td>
                    </tr>
                {% endfor %}
                <tr>
                    <td></td>
                    <td>
                        {{ 'sponsor.partners.call_us'|trans|raw }}
                    </td>
                </tr>
                </tbody>
            </table>
    {% endif %}
{% endblock %}
