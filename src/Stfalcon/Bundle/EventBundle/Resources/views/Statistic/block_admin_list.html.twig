{% extends 'SonataBlockBundle:Block:block_base.html.twig' %}

{% block block %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">{{ 'statistic.title'|trans }}</h3>
        </div>
        <div class="box-body">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <td class="sonata-ba-list-label" width="40%">
                            {{ 'statistic.title'|trans }}
                        </td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-flat btn-link" href="{{ path('admin_show_statistic') }}">
                                    <i class="glyphicon glyphicon-list"></i>
                                    {{ 'statistic.list'|trans }}
                                </a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
