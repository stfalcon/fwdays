<ul class="presenters">
    {% for speaker in speakers %}
    <li>
        <div class="presenter-photo">
            <img src="{{ speaker.photo|apply_filter('speaker_thumb') }}" width="64" height="64" alt="{{ speaker.name }}" />
        </div>
        <div class="presenter-info">
            <a href="{{ path('event_speakers', {'eventSlug': event.slug}) }}#speaker-{{ speaker.id }}">{{ speaker.name }}</a>
            <div class="presenter-company">{{ speaker.company }}</div>
        </div>
    </li>
    {% endfor %}
</ul>

<div class="allpresenters-link">
    <a href="{{ path('event_speakers', {'eventSlug': event.slug}) }}">все докладчики</a>
</div>
