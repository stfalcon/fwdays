<div class="event-slider">
    {% for event in events %}
    <div class="slide">
        <div class="icon">
            <a href="{{ path('event_show', {'slug': event.slug } )}}" title="{{ event.name }}">
                <img src="{{ event.logo }}" width="162" height="172" alt="{{ event.name }}" />
            </a>
        </div>
        <div class="text">
            <h2>
                {{ event.title|raw }}
            </h2>
                
            <p>{{ event.description }}</p>
            
            <a class="know-more" href="{{ path('event_show', {'slug': event.slug } )}}">Узнать больше</a>
        </div>
    </div>
    {% endfor %}
        
    {% if events|length > 1 %}
        <div class="btn-prev"><a href="# " title="previous">previous</a></div>
        <div class="btn-next"><a href="# " title="next">next</a></div>
    {% endif %}
</div><!-- div.event-slider -->
