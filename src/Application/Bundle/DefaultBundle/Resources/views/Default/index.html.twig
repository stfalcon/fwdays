{% extends 'ApplicationDefaultBundle::layout.html.twig' %}

{% block javascripts %}
    {% javascripts 'js/jquery-1.8.2.min.js' 'js/slide.js' 'js/jquery.cycle.all.min.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block content %}
    {% render controller('ApplicationDefaultBundle:News:last', { 'count': 10 }) %}
{% endblock %}

{% block photo_slider %}
    <ul class="photo-slider">
        <li><img src="/images/slider/slide-1.jpg" alt=""></li>
        <li><img src="/images/slider/slide-2.jpg" alt=""></li>
        <li><img src="/images/slider/slide-3.jpg" alt=""></li>
    </ul>
{% endblock %}

{% block slider %}
    {% render controller('ApplicationDefaultBundle:Event:slider') %}
{% endblock %}

{% block switch %}
    {% render controller('ApplicationDefaultBundle:Event:switch') %}
{% endblock %}

{% block sidebar_right %}
    {% render controller('StfalconSponsorBundle:Sponsor:mainWidget') %}
{% endblock %}

{% block div_wrapper_class %}{% endblock %}
