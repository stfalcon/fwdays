{% if event.active %}
<div class="event-row event-list__item">
{% else %}
<div class="event-row event-row--inactive event-list__item">
{% endif %}
    <div class="event-row__left">
        <a href="{{ path('event_show_redesign', {'eventSlug': event.slug } )}}" class="event-row__logo-link">
            {% if event.smallLogoFile is not empty %}
                <img class="event-row__logo" src="{{ vich_uploader_asset(event, 'smallLogoFile') }}" alt="">
            {% elseif event.logoFile is not empty %}
                <img class="event-row__logo" src="{{ vich_uploader_asset(event, 'logoFile') }}" alt="">
            {% endif %}
        </a>
        <div class="event-row__details">
            <a href="{{ path('event_show_redesign', {'eventSlug': event.slug } )}}" class="event-row__title">{{ event.name }}</a>
            <div class="event-row__location">{{ event.city }}</div>
        </div>
    </div>
    <div class="event-row__right">
        <time class="event-row__date">
            <b class="event-row__month">{{ event.date|app_format_date_day_month(event.dateFormat, app.request.locale, 'Europe/Kiev') }}</b>
            <span class="event-row__year">{{ event.date|format_date('Y', app.request.locale, 'Europe/Kiev') }}</span>
        </time>
        {% render controller('ApplicationDefaultBundle:Ticket:status', {'event':event, 'position':'row'}) %}
    </div>
</div>