<!--BEGIN header-->
<header class="header">
    <div class="container">
        <div class="header__left">
            <a href="{{ path('homepage') }}" class="logo header__logo">
                <img class="logo__img" src="{{ asset('assets/img/logo_header.svg') }}" alt="">
            </a>
            {{ knp_menu_render('main_redesign', {'template': 'ApplicationDefaultBundle:Menu:knp_menu.html.twig'}) }}
        </div>
        <div class="header__right">
            {% render controller('ApplicationDefaultBundle:Widgets:languageSwitcher', {'request': app.request, 'position' : 'header'}) %}
            <div class="social header__social">
                {% include '@ApplicationDefault/Redesign/social.html.twig' %}
            </div>
            {{ knp_menu_render('login_redesign', {'template': 'ApplicationDefaultBundle:Menu:knp_menu_login.html.twig'}) }}
        </div>
    </div>
</header>
<!--END header-->