    <div class="remodal__body">
        <div class="remodal__head">
            <h2 class="h2 remodal__title change-title">{{ 'menu.login'|trans }}</h2>
        </div>
        {% include '@ApplicationDefault/Redesign/login_form.html.twig' with{'remodal':'modal-signup-payment', 'queryLink':'?exception_login=1'} %}
    </div>
</div>
<!--END signin-payment-popup-->

